@*@model SEDCWebApplication.ViewModels.ProductDetailsViewModel*@
@model SEDCWebApplication.ViewModels.ProductCreateViewModel


<form enctype="multipart/form-data" asp-controller="product" asp-action="create" method="post">
    <div class="form_div">

        <div class="md-form mb-5">
            <label asp-for="Name"> Naziv</label>
            <input asp-for="Name" type="text" class="form-control validate" placeholder="Unesite naziv pizze" />
            <span asp-validation-for="Name"></span>
        </div>

        <div class="md-form mb-5">
            <label asp-for="UnitPrice">Cena</label>
            <input asp-for="UnitPrice" type="text" class="form-control validate" placeholder="Unesite cenu pizze" />
        </div>

        <div class="md-form mb-5">
            <label asp-for="DiscountedPrice">Akcijska cena</label>
            <input asp-for="DiscountedPrice" type="text" class="form-control validate" placeholder="Unesite akcijsku cenu pizze" />
        </div>

        <div class="md-form">
            <label asp-for="Description">Sastojci</label>
            <input asp-for="Description" class="form-control validate" placeholder="Unesite sastojke pizze" />
        </div>

        @*IsActive*@
        <div class="md-form mb-5">
            <label asp-for="IsActive"></label>
            <div>
                <select asp-for="IsActive" placeholder="IsActive" class="form-control validate"
                        asp-items="Html.GetEnumSelectList<IsActiveEnum>()">
                </select>
                <span asp-validation-for="IsActive"></span>
            </div>
        </div>

        @*IsDeleted*@
        <div class="md-form mb-5">
            <label asp-for="IsDeleted"></label>
            <div>
                <select asp-for="IsDeleted" placeholder="IsDeleted" class="form-control validate" asp-items="Html.GetEnumSelectList<IsDeletedEnum>()">
                </select>
                <span asp-validation-for="IsDeleted"></span>
            </div>
        </div>

        @*Upload*@
        <div class="md-form mb-5">
            <label asp-for="Picture" class="col-sm-2 col-form-label"></label>
            <div class="custom-file">
                <label class="custom-file-label"> Chosee file...</label>
                <input asp-for="Picture" placeholder="Slika" class="form-control custom-file-input" />
            </div>
            <span asp-validation-for="Picture"></span>
        </div>
    </div>

    <div class="form_btn">
        <button type="submit" class="submit_btn"> Potvrdi </button>
    </div>

    @section Scripts{
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }

</form>
